<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="First TAB">

        <EditTextPreference
            app:key="signature1"
            app:title="@string/signature_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="font1"
            app:title="Enter the font size"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="color"
            app:entries="@array/color_entries"
            app:entryValues="@array/color_values"
            app:key="color1"
            app:title="Enter the color for TAB"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Second TAB">

        <EditTextPreference
            app:key="signature2"
            app:title="@string/signature_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="font2"
            app:title="Enter the font size"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="color"
            app:entries="@array/color_entries"
            app:entryValues="@array/color_values"
            app:key="color2"
            app:title="Enter the color for TAB 2"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>